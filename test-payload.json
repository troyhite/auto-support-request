{
    "schemaId": "AzureMonitorMetricAlert",
    "data": {
        "essentials": {
            "alertRuleName": "Virtual WAN VPN Gateway Alert",
            "severity": "Sev2",
            "description": "The VPN Gateway is experiencing high CPU usage",
            "monitoringService": "Microsoft.Network/vpnGateways"
        },
        "alertContext": {
            "resourceId": "/subscriptions/<subid>/resourceGroups/rg-vwam-001/providers/Microsoft.Network/vpnGateways/<vpngatewayname>",
            "properties": {
                "metricName": "Percentage CPU",
                "metricValue": "90",
                "threshold": "80",
                "windowSize": "5",
                "timeAggregation": "Average",
                "operator": "GreaterThan"
            }
        }
    }
}